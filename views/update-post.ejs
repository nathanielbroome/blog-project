<%-include('partials/header') %>

    <div class="container">
        <form class="post-form" method="POST" action="/update-post/<%= title %>">
            <br />
            <h1>Edit Blog Post</h1>
            <!-- Title input -->
            <input type="text" id="title" name="title" value="<%= title %>">
            <br>

            <!-- Text area input -->
            <textarea id="textArea" name="textArea"><%= textArea %></textarea>
            <br>

            <ul id="update-buttons">
                <li><a style="text-decoration: none;" href="/"><button class="update-button" id="back-button">Back</button></a></li> 
                <li><a style="text-decoration: none;"  href="/update-post/<%= title %>"><button class="submit-button">Update</button></a></li>
            </ul>   
        </form>
    </div>

